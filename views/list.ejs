<%- include("header"); -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <% for(var i = 0; i<listOfTasks.length; i++){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%=listOfTasks[i]._id%>">
                    <p><%= listOfTasks[i].name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
        <% } %>


        <form class="item" action="/" method="post">
            <input type="text" placeholder="Enter your task" name="task" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>"> + </button>
        </form>
    </div>
    
<%- include("footer"); -%>
    
